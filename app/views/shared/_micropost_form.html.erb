<%= form_for @micropost do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: t("shared.micropost_form.compose") %>
  </div>
  <%= f.submit t("shared.micropost_form.submit"), class: "btn btn-primary" %>
  <span class="picture">
    <%= f.file_field :picture, accept: Settings.micropost.type_image %>
  </span>
<% end %>
